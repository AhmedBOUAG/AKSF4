{% block body %}
    <h1>ReponseSondage</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reponse_sondage.id }}</td>
            </tr>
            <tr>
                <th>Reponse</th>
                <td>{{ reponse_sondage.reponse }}</td>
