{% extends 'base.html.twig' %}

{% block title %}Question Sondage{% endblock %}

{% block body %}
    <h1>Question Sondage</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question_sondage.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ question_sondage.titre }}</td>
            </tr>
            <tr>
                <th>Approval</th>
                <td>{{ question_sondage.approval ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ question_sondage.dateCreation ? question_sondage.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

     <span class="float-right">{{ include('question_sondage/_delete_form.html.twig') }}</span> 
{% endblock %}
