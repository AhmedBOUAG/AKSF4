<script>
    var itemMenu = 2;
    $(function () {
        $('.custom-control-input').change(function () {
            var actualite_id = $(this).val();
            $.ajax({
                type: 'POST',
                url: '{{ path('ajax_change_statut_actualite') }}',
                data: {id: actualite_id, request: 2},
                sucess: function (data) {
                    alert('retour: ' + data);
                }
            });
        });

        $("p > img").each(function () {
            var widthWindow = $(window).width();
            if (this.width > widthWindow || this.width > 720) {
                //var percentWidth = Math.round((widthWindow * 100) / this.width );
                //var heightImage = Math.round((this.height * percentWidth) / 100);
                $(this).css("width", "100%");
                $(this).css("height", "auto");
                $(this).css("border-radius", "3px");
            }
        });
        setTimeout(function () {
            $('.fos_comment_comment_replies').css('margin-left', '30px');
            $(".fos_comment_comment_voting").each(function (index) {
                var like = $(this).find('button')[0];
                var dislike = $(this).find('button')[1];
                $(like).html('<i class="fas fa-thumbs-up"></i>');
                $(dislike).html('<i class="fas fa-thumbs-down"></i>');
            });
            $('.fos_comment_comment_show').hover(function (e) {
                var btnReply = $(this).find('.fos_comment_comment_reply')[0];
                $(btnReply).fadeIn(500);
            }, function (e) {
                var btnReply = $(this).find('.fos_comment_comment_reply')[0];
                $(btnReply).fadeOut(500);
            });
        }, 2000);


    });

</script>
